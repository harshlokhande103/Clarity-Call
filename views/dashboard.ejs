<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Clarity Call</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <%- include('partials/header') %>
    
    <main>
      <h1>Welcome, <%= user.name %></h1>
      
      <% if(user.role === 'client') { %>
        <!-- Client Dashboard -->
        <section class="dashboard-section">
          <h2>Find Mentors</h2>
          <div class="search-box">
            <input type="text" id="search-mentor" placeholder="Search by specialization...">
            <button class="btn btn-primary">Search</button>
          </div>
          
          <div id="mentors-list" class="cards-container">
            <!-- Mentors will be loaded here -->
          </div>
        </section>
        
        <section class="dashboard-section">
          <h2>Your Appointments</h2>
          <div id="appointments-list" class="cards-container">
            <!-- Appointments will be loaded here -->
          </div>
        </section>
      <% } else { %>
        <!-- Mentor Dashboard -->
        <section class="dashboard-section">
          <h2>Your Appointments</h2>
          <div id="appointments-list" class="cards-container">
            <!-- Appointments will be loaded here -->
          </div>
        </section>
        
        <section class="dashboard-section">
          <h2>Manage Availability</h2>
          <form id="availability-form">
            <div class="form-group">
              <label for="day">Day</label>
              <select id="day" name="day" required>
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
                <option value="Saturday">Saturday</option>
                <option value="Sunday">Sunday</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="start-time">Start Time</label>
              <input type="time" id="start-time" name="startTime" required>
            </div>
            
            <div class="form-group">
              <label for="end-time">End Time</label>
              <input type="time" id="end-time" name="endTime" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Add Availability</button>
          </form>
          
          <div id="availability-list">
            <!-- Availability slots will be loaded here -->
          </div>
        </section>
      <% } %>
      
      <section class="dashboard-section">
        <h2>Your Chats</h2>
        <div id="chats-list" class="cards-container">
          <!-- Chats will be loaded here -->
        </div>
      </section>
    </main>
    
    <%- include('partials/footer') %>
  </div>
  
  <script src="/js/dashboard.js"></script>
</body>
</html>