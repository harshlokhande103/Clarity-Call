<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Clarity Call</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Login</h1>
    
    <% if(typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    
    <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
      <div class="alert alert-danger">
        <% if(Array.isArray(error_msg)) { %>
          <% error_msg.forEach(function(msg) { %>
            <div><%= msg %></div>
          <% }); %>
        <% } else { %>
          <%= error_msg %>
        <% } %>
      </div>
    <% } %>
    
    <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
      <div class="alert alert-success">
        <% if(Array.isArray(success_msg)) { %>
          <% success_msg.forEach(function(msg) { %>
            <div><%= msg %></div>
          <% }); %>
        <% } else { %>
          <%= success_msg %>
        <% } %>
      </div>
    <% } %>
    
    <!-- Change the form action to point to the correct endpoint -->
    <form action="/api/users/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    
    <p>Don't have an account? <a href="/register">Register</a></p>
  </div>
</body>
</html>